{
  "name": "gravity-core",
  "version": "1.0.26",
  "description": "Gravity - AI-powered CSS layout diagnostics for any IDE. Connect your browser to get real-time layout issue detection.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "gravity-core": "dist/cli.js"
  },
  "files": [
    "dist",
    "extension",
    "native-host",
    "README.md",
    "LICENSE",
    "SETUP.md",
    "MCP_CONFIGURATION.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "node --test tests/**/*.test.ts",
    "test:unit": "node --test tests/unit/**/*.test.ts",
    "test:integration": "node --test tests/integration/**/*.test.ts",
    "test:e2e": "node --test tests/e2e/**/*.test.ts",
    "test:performance": "node --test tests/performance/**/*.test.ts",
    "test:security": "node --test tests/security/**/*.test.ts",
    "test:error-handling": "node --test tests/error-handling/**/*.test.ts",
    "test:compatibility": "node --test tests/compatibility/**/*.test.ts",
    "test:regression": "node --test tests/regression/**/*.test.ts",
    "test:stress": "node --test tests/stress/**/*.test.ts",
    "test:functional": "node --test tests/functional/**/*.test.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "devtools",
    "browser",
    "debugging",
    "layout",
    "diagnostics",
    "ai",
    "mcp",
    "css",
    "vscode",
    "cursor",
    "ide"
  ],
  "author": "Gravity Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DharuNamikaze/Gravity-Package.git"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "chrome-native-messaging": "^0.2.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/ws": "^8.5.13",
    "typescript": "^5.7.3"
  }
}
